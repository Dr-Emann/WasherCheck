<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme.LightBar" parent="android:Theme.Holo.Light">
        <item name="ic_menu_refresh">@drawable/ic_menu_refresh_light</item>
        <item name="android:listChoiceBackgroundIndicator">
            @drawable/stevenson_list_selector_holo_light
        </item>
        <item name="android:activatedBackgroundIndicator">
            @drawable/stevenson_activated_background_holo_light
        </item>
    </style>

    <style name="AppBaseTheme.DarkBar" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="ic_menu_refresh">@drawable/ic_menu_refresh_dark</item>
        <item name="android:listChoiceBackgroundIndicator">
            @drawable/stevenson_list_selector_holo_light
        </item>
        <item name="android:activatedBackgroundIndicator">
            @drawable/stevenson_activated_background_holo_light
        </item>
    </style>

</resources>
