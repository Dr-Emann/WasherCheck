<resources>

    <style name="Theme.Southernmiss" parent="AppBaseTheme.LightBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_southernmiss
        </item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Southernmiss</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Southernmiss</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Southernmiss</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Southernmiss</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Southernmiss</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_southernmiss</item>
        <item name="android:actionModeSplitBackground">
            @drawable/cab_background_bottom_southernmiss
        </item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Southernmiss
        </item>
        <item name="android:listSeparatorTextViewStyle">
            @style/Theme.Southernmiss.Widget.TextView.ListSeparator
        </item>
        <item name="android:listChoiceBackgroundIndicator">
            @drawable/southernmiss_list_selector_holo_light
        </item>
        <item name="android:activatedBackgroundIndicator">
            @drawable/southernmiss_activated_background_holo_light
        </item>

    </style>

    <style name="ActionBar.Solid.Southernmiss" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_southernmiss</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_southernmiss</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_southernmiss</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Southernmiss</item>
    </style>

    <style name="ActionBar.Transparent.Southernmiss" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_southernmiss</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Southernmiss</item>
    </style>

    <style name="PopupMenu.Southernmiss" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_southernmiss</item>
    </style>

    <style name="DropDownListView.Southernmiss" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_southernmiss</item>
    </style>

    <style name="ActionBarTabStyle.Southernmiss" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_southernmiss</item>
    </style>

    <style name="DropDownNav.Southernmiss" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_southernmiss</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_southernmiss</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_southernmiss</item>
    </style>

    <style name="ProgressBar.Southernmiss" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_southernmiss</item>
    </style>

    <style name="ActionButton.CloseMode.Southernmiss" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_southernmiss</item>
    </style>

    <style name="Theme.Southernmiss.Widget.TextView.ListSeparator" parent="ListSeparator">
        <item name="android:background">@drawable/list_section_divider_holo_light_southernmiss
        </item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Southernmiss.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Southernmiss</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Southernmiss</item>
    </style>

</resources>