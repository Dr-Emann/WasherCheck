<resources>

    <style name="Theme.Cmu" parent="AppBaseTheme.DarkBar">
    <item name="android:actionBarItemBackground">@drawable/selectable_background_cmu</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Cmu</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Cmu</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Cmu</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Cmu</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Cmu</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_cmu</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_cmu</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Cmu</item>
        <item name="android:listSeparatorTextViewStyle">
            @style/Theme.Cmu.Widget.TextView.ListSeparator
        </item>
        <item name="android:listChoiceBackgroundIndicator">
            @drawable/cmu_list_selector_holo_light
        </item>
        <item name="android:activatedBackgroundIndicator">
            @drawable/cmu_activated_background_holo_light
        </item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Cmu.Widget</item>

    </style>

    <style name="ActionBar.Solid.Cmu" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_cmu</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_cmu</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_cmu</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Cmu</item>
    </style>

    <style name="ActionBar.Transparent.Cmu" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_cmu</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Cmu</item>
    </style>

    <style name="PopupMenu.Cmu" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_cmu</item>
    </style>

    <style name="DropDownListView.Cmu" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_cmu</item>
    </style>

    <style name="ActionBarTabStyle.Cmu" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_cmu</item>
    </style>

    <style name="DropDownNav.Cmu" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_cmu</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_cmu</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_cmu</item>
    </style>

    <style name="ProgressBar.Cmu" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_cmu</item>
    </style>

    <style name="ActionButton.CloseMode.Cmu" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_cmu</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Cmu.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Cmu</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Cmu</item>
    </style>

    <style name="Theme.Cmu.Widget.TextView.ListSeparator" parent="ListSeparator">
        <item name="android:background">@drawable/list_section_divider_holo_light_cmu</item>
        <item name="android:textColor">@color/main_color_cmu</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>