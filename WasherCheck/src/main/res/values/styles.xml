<resources>
    <style name="AppBaseTheme.DarkBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="ic_menu_refresh">@drawable/ic_menu_refresh_dark</item>
        <item name="android:listSeparatorTextViewStyle">@style/ListSeparator</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme.DarkBar">

    </style>

    <style name="BaseListSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:background">@drawable/list_section_divider_holo_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dip</item>
    </style>

    <style name="ListSeparator" parent="BaseListSeparator" />

    <attr name="ic_menu_refresh" format="reference" />
</resources>
