<resources>

    <style name="Theme.Maryland" parent="AppBaseTheme.DarkBar">
    <item name="android:actionBarItemBackground">@drawable/selectable_background_maryland</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Maryland</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Maryland</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Maryland</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Maryland</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Maryland</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_maryland</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_maryland
        </item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Maryland
        </item>
        <item name="android:listSeparatorTextViewStyle">
            @style/Theme.Maryland.Widget.TextView.ListSeparator
        </item>
        <item name="android:listChoiceBackgroundIndicator">
            @drawable/umaryland_list_selector_holo_light
        </item>
        <item name="android:activatedBackgroundIndicator">
            @drawable/umaryland_activated_background_holo_light
        </item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Maryland.Widget</item>

    </style>

    <style name="ActionBar.Solid.Maryland" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_maryland</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_maryland</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_maryland</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Maryland</item>
    </style>

    <style name="ActionBar.Transparent.Maryland" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_maryland</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Maryland</item>
    </style>

    <style name="PopupMenu.Maryland" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_maryland</item>
    </style>

    <style name="DropDownListView.Maryland" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_maryland</item>
    </style>

    <style name="ActionBarTabStyle.Maryland" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_maryland</item>
    </style>

    <style name="DropDownNav.Maryland" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_maryland</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_maryland</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_maryland</item>
    </style>

    <style name="ProgressBar.Maryland" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_maryland</item>
    </style>

    <style name="ActionButton.CloseMode.Maryland" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_maryland</item>
    </style>

    <style name="Theme.Maryland.Widget.TextView.ListSeparator" parent="ListSeparator">
        <item name="android:background">@drawable/list_section_divider_holo_light_maryland</item>
        <item name="android:textColor">@color/main_color_maryland</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Maryland.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Maryland</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Maryland</item>
    </style>

</resources>